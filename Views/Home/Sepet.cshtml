@{
    ViewData["Title"] = "Sepet";
    Layout = "~/Views/Shared/Layout.cshtml";

}

<div class="container mx-auto py-8 px-4">
    <!-- Sepet Başlığı -->
    <h2 class="text-3xl font-bold mb-6 text-white">Вашa корзина</h2>
  
    <!-- Ürünler ve Sağ Panel -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Ürünler -->
      <div class="lg:col-span-2 space-y-4">
        <!-- Ürün Kartı -->
        <div id="item1" class="flex justify-between bg-gray-800 p-4 rounded-lg items-center">
          <div class="flex items-center space-x-4">
            <img class="w-24 h-24 object-cover rounded-lg" src="/images/chef.webp" alt="Steak Image">
            <div>
              <h3 class="text-xl text-white">Salmon Steak</h3>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <button class="bg-gray-600 text-white px-2 py-1 rounded" onclick="decrementQuantity('item1')">-</button>
            <span id="item1-quantity" class="text-white">2</span>
            <button class="bg-gray-600 text-white px-2 py-1 rounded" onclick="incrementQuantity('item1')">+</button>
          </div>
          <div class="flex items-center space-x-4">
            <span id="item1-price" class="text-white">$10</span>
            <button class="text-red-500 hover:text-red-700" onclick="removeItem('item1')">
              <i class="fas fa-trash"></i>
            </button>
          </div>
        </div>
        
        <div id="item2" class="flex justify-between bg-gray-800 p-4 rounded-lg items-center">
          <div class="flex items-center space-x-4">
            <img class="w-24 h-24 object-cover rounded-lg" src="/images/chef.webp" alt="Greek Salad Image">
            <div>
              <h3 class="text-xl text-white">Greek Salad</h3>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <button class="bg-gray-600 text-white px-2 py-1 rounded" onclick="decrementQuantity('item2')">-</button>
            <span id="item2-quantity" class="text-white">2</span>
            <button class="bg-gray-600 text-white px-2 py-1 rounded" onclick="incrementQuantity('item2')">+</button>
          </div>
          <div class="flex items-center space-x-4">
            <span id="item2-price" class="text-white">$4</span>
            <button class="text-red-500 hover:text-red-700" onclick="removeItem('item2')">
              <i class="fas fa-trash"></i>
            </button>
          </div>
        </div>
        
        <script>
          // Increase quantity function
          function incrementQuantity(itemId) {
            const quantityElement = document.getElementById(`${itemId}-quantity`);
            let quantity = parseInt(quantityElement.textContent);
            quantity++;
            quantityElement.textContent = quantity;
          }
        
          // Decrease quantity function
          function decrementQuantity(itemId) {
            const quantityElement = document.getElementById(`${itemId}-quantity`);
            let quantity = parseInt(quantityElement.textContent);
            if (quantity > 1) {
              quantity--;
              quantityElement.textContent = quantity;
            }
          }
        
          // Remove item function
          function removeItem(itemId) {
            const itemElement = document.getElementById(itemId);
            if (itemElement) {
              itemElement.remove();  // Remove the item from the DOM
            }
          }
        </script>
        
        
  
      </div>
  
      <!-- Sağ Panel -->
      <div class="bg-gray-900 p-6 rounded-lg">
        <div class="mb-4">
          <label class="text-white block mb-2">Coupon Code</label>
          <input type="text" class="w-full p-2 bg-gray-800 text-white rounded focus:outline-none" placeholder="Coupon Code">
        </div>

  
        <div class="mb-4">
          <h3 class="text-white font-semibold mb-2">Teslimat</h3>
          <div class="space-y-2">
            <label class="flex items-center text-white">
              <input type="radio" name="delivery" class="mr-2" checked> Mağazadan Teslim Alma
            </label>
            <label class="flex items-center text-white">
              <input type="radio" name="delivery" class="mr-2"> Ev, Gorki Caddesi No: 237
            </label>
            <label class="flex items-center text-white">
              <input type="radio" name="delivery" class="mr-2"> Ofis, Sosyalist Caddesi No: 16
            </label>
            <label class="flex items-center text-white">
              <input type="radio" name="delivery" class="mr-2"> Diğer Adres
            </label>
          </div>
        </div>
        
  
        <div class="border-t border-gray-700 mt-4 pt-4">
          <div class="flex justify-between text-white mb-2">
            <span>Total:</span>
            <span>1380$</span>
          </div>
          <div class="flex justify-between text-white mb-2">
            <span>Promo code:</span>
            <span>-20%</span>
          </div>
          <div class="flex justify-between text-white mb-2">
            <span>Bonuses:</span>
            <span>-258$</span>
          </div>
          <div class="flex justify-between text-white mb-2">
            <span>Delivery:</span>
            <span>100$</span>
          </div>
        
          <div class="flex justify-between text-white font-bold text-lg">
            <span>Total to pay:</span>
            <span>946$</span>
          </div>
        
          <button class="mt-6 w-full bg-green-600 text-white py-3 rounded-lg hover:bg-green-500">
            Place Order
          </button>
        </div>
        
      </div>
    </div>
  </div>
  