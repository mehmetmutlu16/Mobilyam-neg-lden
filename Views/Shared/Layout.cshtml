<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Mehmet Mutlu</title>
        <link href="/css/output.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
        <script src="https://kit.fontawesome.com/e18dc2015e.js"></script>
    </head>
<body>
    <header>
        <nav class="bg-gradient-to-t from-black to-gray-800 p-4 px-6 md:px-24 flex justify-between items-center flex-wrap relative">
            <!-- Logo -->
            <a href="/" class="flex items-center mb-4 md:mb-0">
                <img src="/images/logo.jpeg" alt="Food Hut Logo" class="h-16 md:h-20 mr-2">
            </a>
        
            <!-- Hamburger Icon (Mobilde görünür, masaüstünde gizli) -->
            <div class="md:hidden flex items-center">
                <button id="hamburger" class="text-white focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        
            <!-- Menü (Mobilde gizli, desktop'ta görünür) -->
            <ul id="menu" class="hidden md:flex flex-wrap space-x-4 md:space-x-16 text-white md:flex-row flex-col w-full md:w-auto items-center justify-center">
                <li><a href="/#special" class="hover:text-red-500 py-2 px-4">Today Special Offers</a></li>
                <li><a href="/#why" class="hover:text-red-500 py-2 px-4">Why FoodHut</a></li>
                <li><a href="/home/menu" class="hover:text-red-500 py-2 px-4">Our Menu</a></li>
                <li><a href="#" class="hover:text-red-500 py-2 px-4">Our Popular Food</a></li>
            </ul>
        
            <a href="/home/sepet" class="w-full md:w-auto flex justify-center text-white text-xl hover:text-red-600 md:justify-end">
                <i class="fa-solid fa-cart-shopping"></i>
            </a>

            <!-- Buton (Mobilde tam genişlikte, desktop'ta sağda) -->
            <div class="w-full md:w-auto flex justify-center md:justify-end">
                <a href="#" class="bg-red-600 text-black px-6 py-2 rounded-full hover:bg-red-700 transition duration-300 ease-in-out transform hover:scale-105">Download App</a>
            </div>
        </nav>
        
        <!-- Mobil Menü (Hamburger menü açıldığında gösterilen alan) -->
        <div id="mobileMenu" class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-90 z-50 transform -translate-x-full transition-transform duration-300 ease-in-out md:hidden">
            <div class="flex justify-end p-6">
                <button id="closeMenu" class="text-white">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            <div class="flex flex-col items-center justify-center h-full">
                <ul class="space-y-6 text-white text-xl">
                    <li><a href="/#special" class="hover:text-red-500">Today Special Offers</a></li>
                    <li><a href="/#why" class="hover:text-red-500">Why FoodHut</a></li>
                    <li><a href="/home/menu" class="hover:text-red-500">Our Menu</a></li>
                    <li><a href="#" class="hover:text-red-500">Our Popular Food</a></li>
                </ul>
                
                <div class="mt-6">
                    <a href="#" class="bg-red-600 text-black px-6 py-2 rounded-full hover:bg-red-700 transition duration-300 ease-in-out transform hover:scale-105">Download App</a>
                </div>
            </div>
        </div>
        
        <!-- JavaScript for Hamburger Menu -->
        <script>
            const hamburger = document.getElementById('hamburger');
            const closeMenu = document.getElementById('closeMenu');
            const mobileMenu = document.getElementById('mobileMenu');
        
            // Hamburger menü açma
            hamburger.addEventListener('click', () => {
                mobileMenu.classList.toggle('-translate-x-full');
                mobileMenu.classList.toggle('translate-x-0');
                document.body.classList.toggle('overflow-hidden');
            });
        
            // Çarpı butonuna tıklayınca menüyü kapama
            closeMenu.addEventListener('click', () => {
                mobileMenu.classList.toggle('-translate-x-full');
                mobileMenu.classList.toggle('translate-x-0');
                document.body.classList.toggle('overflow-hidden');
            });
        </script>
    </header>

    <div >
        @RenderBody()
    </div>

    <footer class="bg-black text-white py-6 px-6">
        <div class="flex flex-col lg:flex-row justify-between">
            <div class="lg:w-2/5 mb-6 lg:mb-0 pt-8">
                <h3 class="text-2xl font-bold text-red-600 mb-4">Happy Restaurant</h3>
                <p class="text-sm text-gray-300 mb-4 m">Lorem ipsum dolor sit amet consectetur adipisicing elit. Eveniet delectus pariatur nostrum itaque consequuntur repudiandae eum?</p>
                <div class="flex space-x-12 pl-4">
                    <a href="#" class="text-yellow-400 hover:text-yellow-500">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="text-yellow-400 hover:text-yellow-500">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="text-yellow-400 hover:text-yellow-500">
                        <i class="fab fa-twitter"></i>
                    </a>
                </div>
            </div>
    
            <!-- Orta Kısım -->
            <div class="lg:w-1/5 mb-6 lg:mb-0">
                <h3 class="text-lg font-semibold text-red-600 mb-4">About Us</h3>
                <ul>
                    <li class="mb-2"><a href="#" class="text-gray-300 hover:text-white">About Us</a></li>
                    <li class="mb-2"><a href="#" class="text-gray-300 hover:text-white">Service Us</a></li>
                    <li class="mb-2"><a href="#" class="text-gray-300 hover:text-white">Contact</a></li>
                    <li><a href="#" class="text-gray-300 hover:text-white">Company</a></li>
                </ul>
            </div>
    
            <!-- Sağ Kısım -->
            <div class="lg:w-1/5 mb-6 lg:mb-0">
                <h3 class="text-lg font-semibold text-red-600 mb-4">Company</h3>
                <ul>
                    <li class="mb-2"><a href="#" class="text-gray-300 hover:text-white">Partnership</a></li>
                    <li class="mb-2"><a href="#" class="text-gray-300 hover:text-white">Terms of Use</a></li>
                    <li class="mb-2"><a href="#" class="text-gray-300 hover:text-white">Privacy</a></li>
                    <li><a href="#" class="text-gray-300 hover:text-white">Sitemap</a></li>
                </ul>
            </div>
    
            <!-- Sağ Kısım - Get in touch -->
            <div class="lg:w-1/5">
                <h3 class="text-lg font-semibold text-red-600 mb-4">Get in touch</h3>
                <p class="text-sm text-gray-300 mb-4">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor.</p>
                <div class="flex">
                    <input type="email" class="bg-gray-800 text-white px-4 py-2 rounded-l-full w-full" placeholder="Email">
                    <button class="bg-red-500 text-white p-2 rounded-r-full hover:bg-red-700 ml-2">Subscribe</button>
                </div>
            </div>
            
        </div>
    
        <div class="text-center mt-12 text-gray-400">
            <p>Copyright © 2022 Happy Restaurant.</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
